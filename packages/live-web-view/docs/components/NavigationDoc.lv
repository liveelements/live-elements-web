    Content{
        H2S`Navigation from data`
        P{
            Code`TopNav`T` can be created from data received on the server side.`
        }
    }

    Example{
        render: Example.RenderType.CSRSSR
        element: CardDisplay{
            TopNav{
                NavSections{
                    data: [
                        {
                            links: [
                                { type: 'brand', href: '#', label: 'Brand' },
                                { type: 'toggle' }
                            ]
                        },
                        {
                            toggle: true,
                            links: [
                                { href: '#', label: 'Home' },
                                { href: '#', label: 'About' }
                            ]
                        },
                        {
                            toggle: true,
                            links: [
                                { href: '#', label: 'Source' }
                            ]
                        }
                    ]
                }
            }
        }

