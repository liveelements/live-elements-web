                NavSections{
                    data: [
                        {
                            links: [
                                { type: 'brand', href: '#', label: 'Brand' },
                                { type: 'toggle' }
                            ]
                        },
                        {
                            toggle: true,
                            links: [
                                { href: '#', label: 'Home' },
                                { href: '#', label: 'About' }
                            ]
